    "Default": "Host=${DB_HOST};Port=5432;Database=${POSTGRES_DB};Username=${POSTGRES_USER};Password=${POSTGRES_PASSWORD}"
  },
  "Jwt": {
    "Issuer": "ubs-monitoring-api",
    "Audience": "ubs-monitoring-frontend",
